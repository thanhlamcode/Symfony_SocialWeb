{% extends 'base.html.twig' %}

{% block title %}Đăng nhập{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gradient-to-r from-blue-400 to-purple-500">
        <div class="bg-white p-10 rounded-2xl shadow-lg max-w-md w-full">
            <h1 class="text-2xl font-bold text-center text-gray-700">Đăng nhập</h1>

            {% if error %}
                <div class="mt-3 text-red-500 text-sm text-center">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post" class="mt-6">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                    <input type="email" name="_username" id="email" value="{{ last_username }}" required autofocus
                           class="mt-1 px-4 py-2 w-full border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
                </div>

                <div class="mb-4">
                    <label for="password" class="block text-sm font-medium text-gray-700">Mật khẩu</label>
                    <input type="password" name="_password" id="password" required
                           class="mt-1 px-4 py-2 w-full border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
                </div>

                <div class="flex items-center justify-between">
                    <a href="#" class="text-sm text-blue-500 hover:underline">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="mt-4 w-full bg-gradient-to-r from-blue-400 to-purple-500 text-white py-2 rounded-lg hover:opacity-90 transition">
                    Đăng nhập
                </button>
            </form>

            <div class="mt-6 text-center text-gray-600 text-sm">
                Hoặc đăng nhập bằng:
            </div>

            <div class="mt-3 flex justify-center space-x-4">
                <a href="#" class="p-2 rounded-full hover:opacity-80 transition">
                    <img src="{{ asset('images/facebook.png') }}" alt="Facebook" class="w-10 h-10">
                </a>
                <a href="#" class="p-2 rounded-full hover:opacity-80 transition">
                    <img src="{{ asset('images/google.png') }}" alt="Google" class="w-10 h-10">
                </a>
            </div>

            <div class="mt-6 text-center text-gray-600 text-sm">
                Chưa có tài khoản? <a href="/register" class="text-blue-500 hover:underline">Đăng ký</a>
            </div>
        </div>
    </div>
    {#Alert#}
    {% include 'components/alert.html.twig' %}
{% endblock %}
