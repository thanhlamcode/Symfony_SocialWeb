{% extends 'base.html.twig' %}

{% block body %}

    <div class="flex h-screen w-full bg-gray-900 text-white">
        {% include 'components/sidebar.html.twig' %}

        {# Cột trái - Chỉnh sửa hồ sơ #}
        <div class="w-[50%] flex justify-center items-center p-6 overflow-y-auto">
            <div class="w-full max-w-3xl bg-gray-800 rounded-lg shadow-lg p-6">

                {# Header #}
                <div class="flex items-center justify-between">
                    <h2 class="text-2xl font-bold text-white">Edit User Profile</h2>
                    <a href="#" class="text-blue-400 hover:underline">Preview ↗</a>
                </div>

                {# Banner & Avatar #}
                <div class="relative mt-4">
                    <div class="w-full h-32 bg-gradient-to-r from-purple-600 via-pink-500 to-orange-400 rounded-lg"></div>
                    <div class="absolute -bottom-8 left-6 flex items-center">
                        <img src="{{ user.avatar }}" alt="User Avatar" class="w-24 h-24 rounded-full border-4 border-gray-700 shadow-lg">
                        <div class="mt-4 ml-4">
                            <p class="font-semibold text-white">{{ user.name }}</p>
                            <p class="text-gray-400 text-sm">This will be displayed on your profile</p>
                        </div>
                    </div>
                </div>

                {# Personal Information #}
                <div class="mt-6 bg-gray-700 p-4 rounded-lg">
                    <h3 class="text-lg font-semibold text-white">Personal Information</h3>

                    {# Avatar URL #}
                    <div class="mt-3">
                        <label class="text-sm text-gray-400">Avatar URL</label>
                        <div class="flex items-center border border-gray-600 rounded-lg p-2 bg-gray-800">
                            <input type="text" value="{{ user.avatar }}" class="w-full pl-2 bg-transparent outline-none text-white">
                        </div>
                    </div>

                    {# Banner URL #}
                    <div class="mt-3">
                        <label class="text-sm text-gray-400">Banner URL</label>
                        <div class="flex items-center border border-gray-600 rounded-lg p-2 bg-gray-800">
                            <input type="text" value="{{ user.banner }}" class="w-full pl-2 bg-transparent outline-none text-white">
                        </div>
                    </div>

                    {# Slug URL #}
                    <div class="mt-3">
                        <label class="text-sm text-gray-400">Slug</label>
                        <div class="flex items-center border border-gray-600 rounded-lg p-2 bg-gray-800">
                            <input type="text" value="{{ user.slug }}" class="w-full pl-2 bg-transparent outline-none text-white">
                        </div>
                    </div>

                    {# Full Name #}
                    <div class="mt-3">
                        <label class="text-sm text-gray-400">Full Name</label>
                        <div class="flex items-center border border-gray-600 rounded-lg p-2 bg-gray-800">
                            <input type="text" value="{{ user.name }}" class="w-full pl-2 bg-transparent outline-none text-white">
                        </div>
                    </div>

                    {# Email #}
                    <div class="mt-3">
                        <label class="text-sm text-gray-400">Email address</label>
                        <div class="flex items-center border border-gray-600 rounded-lg p-2 bg-gray-800">
                            <img src="{{ asset('icons/email.svg') }}" class="w-5 h-5 text-gray-400">
                            <input type="email" value="{{ user.email }}" class="w-full pl-2 bg-transparent outline-none text-white">
                        </div>
                    </div>

                    {# Mobile Number #}
                    <div class="mt-3">
                        <label class="text-sm text-gray-400">Mobile Number</label>
                        <div class="flex items-center border border-gray-600 rounded-lg p-2 bg-gray-800">
                            <img src="{{ asset('icons/phone.svg') }}" class="w-5 h-5 text-gray-400">
                            <input type="text" value="{{ user.phone }}" class="w-full pl-2 bg-transparent outline-none text-white">
                        </div>
                    </div>

                    {# Role #}
                    <div class="mt-3">
                        <label class="text-sm text-gray-400">Role</label>
                        <div class="border border-gray-600 rounded-lg p-2 bg-gray-800">
                            <input type="text" value="{{ user.role }}" class="w-full bg-transparent outline-none font-semibold text-white">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Cột phải - Bio, Interests, Social Media #}
        <div class="w-[50%] flex justify-center items-center p-6">
            <div class="w-full max-w-2xl bg-gray-800 rounded-lg shadow-lg p-6">

                {# Bio Section #}
                <div class="bg-gray-700 p-4 rounded-lg mb-6">
                    <h3 class="text-lg font-semibold text-white">Bio</h3>
                    <textarea class="w-full p-4 border border-gray-600 rounded-lg bg-gray-800 text-white outline-none resize-none">
                    {{ user.bio }}
                </textarea>
                </div>

                {# Industry/Interests Section #}
                <div class="bg-gray-700 p-4 rounded-lg mb-6">
                    <h3 class="text-lg font-semibold text-white">Industry/Interests</h3>
                    <div class="flex flex-wrap gap-2 mt-3">
                        {% for interest in user.interests %}
                            <span class="bg-blue-900 text-blue-400 px-3 py-1 rounded-full text-sm font-medium flex items-center">
                            {{ interest }} ×
                        </span>
                        {% endfor %}
                    </div>
                    <button class="w-full mt-3 py-2 border border-gray-600 rounded-lg text-gray-300 hover:bg-gray-700">
                        + Add more
                    </button>
                </div>

                {# Social Media Accounts Section #}
                <div class="bg-gray-700 p-4 rounded-lg">
                    <h3 class="text-lg font-semibold text-white">Social Media accounts</h3>
                    <div class="mt-3 space-y-3">
                        {% for account in user.social_accounts %}
                            <a href="{{ account.url }}" target="_blank"
                               class="flex items-center gap-2 p-3 bg-gray-800 border border-gray-600 rounded-lg text-gray-300 hover:bg-gray-700">
                                <img src="{{ asset(account.icon) }}" class="w-6 h-6">
                                <span class="font-medium">{{ account.url }}</span>
                            </a>
                        {% endfor %}
                    </div>
                    <button class="w-full mt-3 py-2 border border-gray-600 rounded-lg text-gray-300 hover:bg-gray-700">
                        + Add more
                    </button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
