{% extends 'base.html.twig' %}

{% block title %}Office Chat{% endblock %}

{% block body %}
    <div class="flex h-screen w-full">

        <div class="w-[10%] bg-gray-900 p-4 text-white flex flex-col h-screen items-center">
            {# Logo hoặc tiêu đề #}
            <div class="text-2xl font-bold tracking-widest mb-6">CH</div>

            {# Danh sách menu #}
            <div class="flex flex-col space-y-4">
                <div class="relative flex flex-col items-center cursor-pointer hover:text-gray-400 transition">
                    <img src="/icons/chat.svg" class="w-8 h-8">
                    <span class="absolute -top-1 -right-3 bg-gray-700 text-xs px-2 py-0.5 rounded-full">86</span>
                    <p class="text-xs mt-1">All chats</p>
                </div>

                <div class="flex flex-col items-center cursor-pointer hover:text-gray-400 transition">
                    <img src="/icons/folder.svg" class="w-8 h-8">
                    <p class="text-xs mt-1">Work</p>
                </div>

                <div class="flex flex-col items-center cursor-pointer hover:text-gray-400 transition">
                    <img src="/icons/folder.svg" class="w-8 h-8">
                    <p class="text-xs mt-1">Meet</p>
                </div>

                {# Dấu phân cách #}
                <hr class="w-3/4 border-gray-700 my-2">

                <div class="flex flex-col items-center cursor-pointer hover:text-gray-400 transition">
                    <img src="/icons/calendar.svg" class="w-8 h-8">
                    <p class="text-xs mt-1">Calendar</p>
                </div>

                <div class="flex flex-col items-center cursor-pointer hover:text-gray-400 transition">
                    <img src="/icons/rating.svg" class="w-8 h-8">
                    <p class="text-xs mt-1">Rating</p>
                </div>

                <div class="flex flex-col items-center cursor-pointer hover:text-gray-400 transition">
                    <img src="/icons/saved.svg" class="w-8 h-8">
                    <p class="text-xs mt-1">Saved</p>
                </div>
            </div>
        </div>

        <div class="w-[30%] bg-gray-800 p-4 text-white flex flex-col h-screen">
            {# Ô tìm kiếm #}
            <div class="relative mb-4">
                <input type="text" placeholder="Search"
                       class="w-full p-3 rounded-lg bg-gray-700 text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-400">
            </div>

            {# Danh sách cuộc trò chuyện #}
            <div class="flex-1 overflow-y-auto space-y-3">
                {% for chat in chat_list %}
                    <div class="flex items-center p-3 rounded-lg cursor-pointer hover:bg-gray-700 transition">
                        <img src="{{ chat.avatar }}" class="w-12 h-12 rounded-full mr-3">
                        <div class="flex-1">
                            <p class="font-bold text-white">{{ chat.name }}</p>
                            <p class="text-sm text-gray-400">{{ chat.last_message }}</p>
                        </div>
                        <span class="text-xs text-gray-500">{{ chat.time }}</span>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="w-[70%] bg-gray-200 p-4">Right (70%)</div>
    </div>
{% endblock %}
