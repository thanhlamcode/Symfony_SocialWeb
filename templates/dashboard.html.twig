{% extends 'base.html.twig' %}

{% block title %}Office Chat{% endblock %}

{% block body %}
    <div class="flex h-screen w-full">

        {# Sidebar - Ẩn trên mobile, hiện trên md (>=768px) #}
        <div class="hidden md:flex md:w-[10%] bg-gray-900 p-4 text-white flex-col h-screen items-center">
            <div class="text-2xl font-bold tracking-widest mb-6">CH</div>

            <div class="flex flex-col space-y-4">
                <div class="relative flex flex-col items-center cursor-pointer hover:text-gray-400 transition">
                    <img src="/icons/chat.svg" class="w-8 h-8">
                    <span class="absolute -top-1 -right-3 bg-gray-700 text-xs px-2 py-0.5 rounded-full">86</span>
                    <p class="text-xs mt-1">All chats</p>
                </div>
                <div class="flex flex-col items-center cursor-pointer hover:text-gray-400 transition">
                    <img src="/icons/folder.svg" class="w-8 h-8">
                    <p class="text-xs mt-1">Work</p>
                </div>
                <div class="flex flex-col items-center cursor-pointer hover:text-gray-400 transition">
                    <img src="/icons/folder.svg" class="w-8 h-8">
                    <p class="text-xs mt-1">Meet</p>
                </div>
                <hr class="w-3/4 border-gray-700 my-2">
                <div class="flex flex-col items-center cursor-pointer hover:text-gray-400 transition">
                    <img src="/icons/calendar.svg" class="w-8 h-8">
                    <p class="text-xs mt-1">Calendar</p>
                </div>
                <div class="flex flex-col items-center cursor-pointer hover:text-gray-400 transition">
                    <img src="/icons/rating.svg" class="w-8 h-8">
                    <p class="text-xs mt-1">Rating</p>
                </div>
                <div class="flex flex-col items-center cursor-pointer hover:text-gray-400 transition">
                    <img src="/icons/saved.svg" class="w-8 h-8">
                    <p class="text-xs mt-1">Saved</p>
                </div>
            </div>
        </div>

        {# Danh sách cuộc trò chuyện - Ẩn trên mobile, thu nhỏ trên tablet #}
        <div class="hidden sm:flex sm:w-[30%] lg:w-[30%] bg-gray-800 p-4 text-white flex-col h-screen">
            <div class="relative mb-4">
                <input type="text" placeholder="Search"
                       class="w-full p-3 rounded-lg bg-gray-700 text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-400">
            </div>

            <div class="flex-1 overflow-y-auto space-y-3">
                {% for chat in chat_list %}
                    <div class="flex items-center p-3 rounded-lg cursor-pointer hover:bg-gray-700 transition">
                        <img src="{{ chat.avatar }}" class="w-12 h-12 rounded-full mr-3">
                        <div class="flex-1">
                            <p class="font-bold text-white">{{ chat.name }}</p>
                            <p class="text-sm text-gray-400">{{ chat.last_message }}</p>
                        </div>
                        <span class="text-xs text-gray-500">{{ chat.time }}</span>
                    </div>
                {% endfor %}
            </div>
        </div>

        {# Khung chat chính - Luôn full màn hình trên mobile #}
        <div class="w-full sm:w-[70%] bg-gray-900 p-6 text-white flex flex-col h-screen">
            <div class="bg-gray-800 p-4 rounded-lg flex items-center justify-between shadow-md">
                <div>
                    <h2 class="text-xl font-bold">Office chat</h2>
                    <p class="text-sm text-gray-400">45 members, 24 online</p>
                </div>
                <div class="flex space-x-4 text-gray-400">
                    <button class="hover:text-white">🔍</button>
                    <button class="hover:text-white">📞</button>
                    <button class="hover:text-white">📺</button>
                    <button class="hover:text-white">⚙️</button>
                </div>
            </div>

            <div class="flex-1 overflow-y-auto space-y-6 p-4">
                <div class="flex items-start space-x-3">
                    <img src="/images/avatar1.png" class="w-10 h-10 rounded-full">
                    <div>
                        <p class="text-sm font-bold">Harry Fettel</p>
                        <img src="/images/pizza.jpg" class="rounded-lg mt-2">
                        <div class="flex space-x-2 text-gray-400 text-xs mt-1">
                            <span>👀 3</span>
                            <span>08:57</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-gray-800 p-4 rounded-lg flex items-center">
                <button class="text-gray-400 hover:text-white">📎</button>
                <input type="text" placeholder="Your message"
                       class="w-full p-2 bg-gray-700 rounded-lg border border-gray-600 text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-400 mx-4">
                <button class="text-gray-400 hover:text-white">🎤</button>
            </div>
        </div>
    </div>
{% endblock %}
