{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="bg-white p-6 rounded-lg shadow-lg w-3/4">
            <h1 class="text-3xl font-bold text-center text-gray-700">Welcome to Dashboard</h1>

            {% if user %}
                <p class="text-center mt-4 text-lg text-gray-600">Hello, {{ user.email }}!</p>
            {% else %}
                <p class="text-center mt-4 text-lg text-red-500">Bạn chưa đăng nhập!</p>
            {% endif %}

            <div class="mt-6 flex justify-center">
                <a href="{{ path('app_logout') }}" class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-700">
                    Logout
                </a>
            </div>
        </div>
    </div>
{% endblock %}
